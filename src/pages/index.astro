---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Chuẩn Màu — Dịch vụ cân màu màn hình chuyên nghiệp tại Hà Nội',
  description: 'Dịch vụ cân màu màn hình PC, laptop, bảng vẽ chuyên nghiệp tại Hà Nội. Độ chính xác cao, bảo hành 6 tháng. Phù hợp cho Designer, Photographer, Video Editor.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Liên hệ ngay',
        href: '/lien-he',
        icon: 'tabler:phone',
      },
      { text: 'Xem dịch vụ', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero.png', alt: 'Cân màu màn hình chuyên nghiệp' }}
  >
    <Fragment slot="title">
      Dịch vụ <span class="hidden xl:inline">cân màu màn hình</span>
      <span class="text-accent dark:text-white"> chuyên nghiệp</span> tại Hà Nội
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Chuẩn Màu</span> cung cấp dịch vụ cân màu màn hình PC, laptop, bảng vẽ chuyên nghiệp
        với độ chính xác cao.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-primary">Chuẩn Màu: Chuyên nghiệp & Chính xác.</span>
      Phù hợp cho Designer, Photographer, Video Editor, và tất cả những ai cần độ chính xác màu sắc cao.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Dịch vụ"
    title="Các dịch vụ cân màu màn hình của chúng tôi"
    subtitle="Chúng tôi cung cấp các dịch vụ cân màu chuyên nghiệp với thiết bị hiện đại và độ chính xác cao nhất."
    items={[
      {
        title: 'Cân màu màn hình PC',
        description:
          'Dịch vụ cân màu màn hình PC chuyên nghiệp với thiết bị đo màu hiện đại, đảm bảo độ chính xác cao.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Cân màu laptop',
        description: 'Cân màu laptop cho Designer, Photographer và Video Editor với độ chính xác màu sắc tối ưu.',
        icon: 'tabler:device-laptop',
      },
      {
        title: 'Cân màu bảng vẽ',
        description:
          'Dịch vụ cân màu bảng vẽ Wacom, Huion và các thương hiệu khác cho công việc thiết kế chuyên nghiệp.',
        icon: 'tabler:device-tablet',
      },
      {
        title: 'Cài đặt ICC Profile',
        description: 'Hướng dẫn và hỗ trợ cài đặt ICC Profile cho Windows và macOS để duy trì độ chính xác màu sắc.',
        icon: 'tabler:settings',
      },
      {
        title: 'Tư vấn chọn màn hình',
        description: 'Tư vấn chọn màn hình phù hợp với nhu cầu công việc và ngân sách của bạn.',
        icon: 'tabler:help',
      },
      {
        title: 'Bảo hành và hỗ trợ',
        description: 'Dịch vụ bảo hành và hỗ trợ kỹ thuật sau khi cân màu để đảm bảo chất lượng lâu dài.',
        icon: 'tabler:shield-check',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Quy trình cân màu màn hình chuyên nghiệp của chúng tôi."
    items={[
      {
        title: 'Bước 1: <span class="font-medium">Liên hệ</span>',
        description:
          'Liên hệ với chúng tôi qua điện thoại hoặc website để đặt lịch hẹn. Chúng tôi sẽ tư vấn và báo giá chi tiết cho dịch vụ cân màu.',
        icon: 'tabler:phone',
      },
      {
        title: 'Bước 2: <span class="font-medium">Khảo sát</span>',
        description:
          'Kỹ thuật viên sẽ đến tận nơi để khảo sát màn hình và đánh giá tình trạng hiện tại. Chúng tôi sẽ kiểm tra độ sáng, độ tương phản và màu sắc.',
        icon: 'tabler:search',
      },
      {
        title: 'Bước 3: <span class="font-medium">Cân màu</span>',
        description:
          'Sử dụng thiết bị đo màu chuyên nghiệp để cân chỉnh màn hình theo chuẩn màu phù hợp với nhu cầu công việc của bạn.',
        icon: 'tabler:palette',
      },
      {
        title: 'Hoàn thành!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: '~/assets/images/xritei1-chuanmau.jpg',
      alt: 'máy cân màu xrite i1 chuẩn màu',
    }}
  />

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Bài viết"
    information={`Mỗi bài viết sẽ giúp bạn hiểu rõ hơn về tầm quan trọng của việc cân màu màn hình trong công việc thiết kế.
                        Độ chính xác màu sắc là yếu tố quan trọng quyết định chất lượng sản phẩm cuối cùng.
                `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Câu hỏi thường gặp"
    subtitle="Tìm hiểu thêm về dịch vụ cân màu màn hình và những điều bạn cần biết trước khi sử dụng dịch vụ của chúng tôi."
    tagline="FAQ"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Tại sao cần cân màu màn hình?',
        description:
          'Cân màu màn hình giúp đảm bảo màu sắc hiển thị chính xác, đặc biệt quan trọng cho Designer, Photographer, Video Editor. Màn hình không được cân màu có thể hiển thị màu sắc sai lệch, ảnh hưởng đến chất lượng công việc.',
      },
      {
        title: 'Dịch vụ cân màu mất bao lâu?',
        description:
          'Thời gian cân màu cho mỗi màn hình thường mất khoảng 30-45 phút. Chúng tôi sẽ kiểm tra, đo đạc và cân chỉnh màn hình theo chuẩn màu phù hợp với nhu cầu công việc của bạn.',
      },
      {
        title: 'Có cần chuẩn bị gì trước khi cân màu?',
        description:
          'Bạn chỉ cần chuẩn bị màn hình sạch sẽ và đảm bảo màn hình đã được sử dụng ít nhất 30 phút để ổn định nhiệt độ. Chúng tôi sẽ mang theo tất cả thiết bị cần thiết.',
      },
      {
        title: 'Dịch vụ có bảo hành không?',
        description:
          'Chúng tôi cung cấp bảo hành 6 tháng cho dịch vụ cân màu. Nếu có vấn đề gì về màu sắc trong thời gian bảo hành, chúng tôi sẽ hỗ trợ kiểm tra và cân chỉnh lại miễn phí.',
      },
      {
        title: 'Giá dịch vụ như thế nào?',
        description:
          'Giá dịch vụ phụ thuộc vào loại màn hình và yêu cầu cụ thể. Chúng tôi cung cấp mức giá cạnh tranh và phù hợp với chất lượng dịch vụ chuyên nghiệp. Liên hệ để được báo giá chi tiết.',
      },
      {
        title: 'Có dịch vụ tận nơi không?',
        description:
          'Có, chúng tôi cung cấp dịch vụ tận nơi tại Hà Nội. Kỹ thuật viên sẽ đến tận nơi để thực hiện cân màu, giúp bạn tiết kiệm thời gian và chi phí di chuyển.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Liên hệ ngay',
        href: '/lien-he',
        icon: 'tabler:phone',
      },
    ]}
  >
    <Fragment slot="title">
      Chuẩn Màu <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Chuyên nghiệp</span>
    </Fragment>

    <Fragment slot="subtitle">
      Đừng để màu sắc sai lệch ảnh hưởng đến chất lượng công việc của bạn. <br class="hidden md:inline" />
      Liên hệ ngay để được tư vấn miễn phí!
    </Fragment>
  </CallToAction>
</Layout>
